# ~/.config/sxhkd/sxhkdrc

# launch apps 
{_, shift +} super + ctrl + {Return,space,f,v,n,g,k,r,a}
    {_, sudo} {$TERMINAL,google-chrome-beta,firefox,code,nautilus,gimp,krita,rofi -show run, arandr}

{_, shift +} super + alt + {a,p}
    {_, sudo} {pavucontrol,pinta}

{_, shift +} super + ctrl + {}
    {_, sudo} $TERMINAL -e {}
    
{_, shift +} super + alt + {v}
    {_, sudo} $TERMINAL -e {nvim}

# screen layout
super + s ; {m,l,b}
    screen-layout --{monitor,laptop,both}

# print screen
Print
    gnome-screenshot --interactive

# power
super + ctrl + alt {p,r,s,h,l}
    {poweroff,reboot,systemctl suspend,systemctl hibernate,xset s activate}
    xbacklight -{inc,dec} 10

# volume
XF86Audio{Raise,Lower}Volume
    pactl -- set-sink-volume 0 {+,-}5%

XF86AudioMute
    pactl -- set-sink-mute 0 toggle 
