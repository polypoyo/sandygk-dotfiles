# ~/.config/sxhkd/sxhkdrc

# launch apps 
{_, shift +} super + ctrl + {Return,space,f,v,n,g,k,r,a,p}
    {_, sudo} {$TERMINAL,google-chrome-beta,firefox,code,nautilus,gimp,krita,rofi -show run, arandr,pinta}

{_, shift +} super + alt + {a}
    {_, sudo} {pavucontrol}

{_, shift +} super + ctrl + {}
    {_, sudo} $TERMINAL -e {}
    
{_, shift +} super + alt + {v}
    {_, sudo} $TERMINAL -e {nvim}

super + ctrl + t 
  google-chrome-stable --app=https://teams.microsoft.com/_#/conversations/19:meeting_ZmEzZjM0YWQtZGY3My00YjEzLWJkMzUtMDA1ZGE2OWMxZDA5@thread.v2?ctx=chat

# screen layout
super + ctrl + s ; {m,l,b}
    screen-layout --{monitor,laptop,both}

# print screen
Print
    gnome-screenshot -ia

# power
super + ctrl + alt {p,r,s,h,l}
    {poweroff,reboot,systemctl suspend,systemctl hibernate,xset s activate}
    xbacklight -{inc,dec} 10

# volume
XF86Audio{Raise,Lower}Volume
    pactl set-sink-mute @DEFAULT_SINK@ 0; pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
