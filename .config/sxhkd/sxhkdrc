# APPS

# launch apps 
{_, shift +} super + ctrl + {Return,space,v,f,g,k,m,a,p}
  {_, sudo} {$TERM,google-chrome-stable,code,firefox,gimp,krita,arandr,pavucontrol,pinta}

# launch terminal apps
{_, shift +} super + ctrl + {n,r}
  {_, sudo} $TERM -e {nvim,ranger}

# teams
super + ctrl + t 
  google-chrome-stable --app='https://teams.microsoft.com/_#/conversations/19:meeting_ZmEzZjM0YWQtZGY3My00YjEzLWJkMzUtMDA1ZGE2OWMxZDA5@thread.v2?ctx=chat'

# SELECTIONS

{_, shift +} super + alt + {b,n}
  {_, sudo} $TERM -e fish -c "edit_file_in_dir {~/bin,-r ~/notes}"

{_, shift +} super + alt + r 
  {_, sudo} $TERM -e fish -c open_repo

{_, shift +} super + alt + l
  {_, sudo} $TERM -e fish -c launcher

{_, shift +} super + alt + s 
  {_, sudo} $TERM -e fish -c spell_checker

# SEQUENCES

# set theme
super + alt + t ; {d,l}
  set_theme_all {--dark,--light}

# screen layout
super + alt + s ; {l,w,h}
  ~/.screenlayout/{laptop,work,home}.sh 

# MISC

# toggle notifications
super + ctrl + n
  test (pidof dunst) && pkill dunst || dunst &

# screenshot 
#   Print + 
#     _     : entire screek     ctrl  : selecting a portion of the screen
#     super : current windows
#     shift : deleying for 3 seconds, it can be combined with ctrl and super
Print + {_,ctrl,super,shift,shift + ctrl, shift + super}
  mispipe "maim { ,-s,-i $(xdotool getactivewindow),-d 3,-sd 3,-i $(xdotool getactivewindow) -d 3}" "ifne xclip -selection clipboard -t image/png" && notify-send "Screenshot taken" "Image saved to clipboard"

# screencast
alt + Print
  deepin-screen-recorder

# volume up/down
XF86Audio{Raise,Lower}Volume
  pactl set-sink-mute @DEFAULT_SINK@ 0; pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

# volume togle mute
XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

# power
super + ctrl + alt {p,r,s,h,l}
  {poweroff,reboot,systemctl suspend,systemctl hibernate,xset s activate}
