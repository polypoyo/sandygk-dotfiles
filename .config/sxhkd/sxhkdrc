# ~/.config/sxhkd/sxhkdrc

# launch apps 
{_, shift +} super + ctrl + {Return,space,f,v,n,g,k,p,r}
    {_, sudo} {$TERMINAL,google-chrome-beta,firefox,code,nautilus,gimp,krita,pinta,rofi -show run}

{_, shift +} super + ctrl + {r}
    {_, sudo} $TERMINAL -e {ranger}
    
{_, shift +} super + alt + {v}
    {_, sudo} $TERMINAL -e {nvim}

# print screen
Print
    gnome-screenshot --interactive

# power
super + ctrl + alt {p,r,s,h,l}
    {poweroff,reboot,systemctl suspend,systemctl hibernate,locker}
    
# brightness
XF86MonBrightness{Up,Down}
    xbacklight -{inc,dec} 10

