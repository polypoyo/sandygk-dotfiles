# ~/.config/sxhkd/sxhkdrc

# launch apps 
{_, shift +} super + ctrl + {Return,space,f,v,n,g,k,p}
    {_, sudo} {gnome-terminal,google-chrome-beta,firefox,code,nautilus,gimp,krita,pinta}

{_, shift +} super + ctrl + {r}
    {_, sudo} gnome-terminal -e {ranger}
    
{_, shift +} super + alt + {v}
    {_, sudo} gnome-terminal -e {nvim}

# print screen
Print
    gnome-screenshot --interactive

# power
super + ctrl + alt {p,r,s}
    sudo {poweroff,reboot,systemctl suspend,systemctl hibernate}
