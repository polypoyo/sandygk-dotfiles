#!/bin/bash

date='date +"%b-%d %a"'
time='date +"%I:%M %p"'
mute='pamixer --get-mute'
volume='pamixer --get-volume'
notifications='[ $(pidof dunst) ] && echo "not: on" || echo "not: off"'
audio='[ "$(eval $mute)" == true ] && echo "vol: mute" || echo "vol: $(eval $volume)%"'
battery='echo "bat: $(eval "cat /sys/class/power_supply/BAT0/capacity")%"'

set_status() {
  xsetroot -name "  $(eval $notifications)  | $(eval $audio)  |  $(eval $battery)  |  $(eval $date)  |  $(eval $time)  "
}

case $1 in
  --loop)
    while set_status
    do 
        sleep 0.3 
    done &
    ;;

  --refresh)
    set_status
    ;;
esac
