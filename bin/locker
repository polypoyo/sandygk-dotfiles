#!/bin/bash

export XSECURELOCK_DISCARD_FIRST_KEYPRESS=0
export XSECURELOCK_SHOW_DATETIME=1
export XSECURELOCK_DATETIME_FORMAT="%a %d-%b | %I:%M %p"
export XSECURELOCK_PASSWORD_PROMPT="asterisks"
export XSECURELOCK_SAVER="saver_mpv"
export XSECURELOCK_AUTH_TIMEOUT="10"
export XSECURELOCK_AUTH_BACKGROUND_COLOR="#232729"
export XSECURELOCK_LIST_VIDEOS_COMMAND="echo ~/wallpaper"
export XSECURELOCK_IMAGE_DURATION_SECONDS="10000000"

xsecurelock
